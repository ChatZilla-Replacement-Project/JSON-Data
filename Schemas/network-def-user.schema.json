{
	"$id": "https://github.com/ChatZilla-Replacement-Project/JSON-Schemas/raw/main/network-def.schema.json",
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "array",
	"items": {
		"type": "object",
		"properties":
		{
			"Name":
			{
				"type": "string"
			},
			"Homepage":
			{
				"type": "string",
				"format": "iri"
			},
			"Hide":
			{
				"type": "boolean"
			},
			"AutoConnect":
			{
				"type": "boolean"
			},
			"Servers":
			{
				"type": "array",
				"items":
				{
					"type": "object",
					"minItems": 1,
					"properties":
					{
						"Domain":
						{
							"type": "string",
							"format": "hostname"
						},
						"Ignore":
						{
							"type": "boolean"
						},
						"Ports":
						{
							"type": "array",
							"items":
							{
								"type": "number",
								"minimum": 0,
								"maximum": 65535
							}
						},
						"SslPort":
						{
							"type": "array",
							"items":
							{
								"type": "number",
								"minimum": 0,
								"maximum": 65535
							}
						}
					},
					"required":
					[
						"Domain"
					]
				}
			},
			"NickServ":
			{
				"type": "string",
				"enum":
				[
					null,
					"unknown",
					"atTheme"
				]
			},
			"ChanServ":
			{
				"type": "string",
				"enum":
				[
					null,
					"unknown",
					"atTheme"
				]
			},
			"HasAlis":
			{
				"type": "bool",
				"default":  false
			},
			"HasQ":
			{
				"type": "bool",
				"default":  false
			}
		},
		"required": [
			"Name",
			"Homepage",
			"Servers"
		]
	}
}
