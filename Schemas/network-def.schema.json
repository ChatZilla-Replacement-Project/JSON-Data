{
	"$id": "https://github.com/ChatZilla-Replacement-Project/JSON-Schemas/raw/main/network-def.schema.json",
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "array",
	"items": {
		"type": "object",
		"properties": {
			"name": {
				"type": "string"
			},
			"homepage": {
				"type": "string",
				"format": "iri"
			},
			"hide": {
				"type": "boolean"
			},
			"autoconnect": {
				"type": "boolean"
			},
			"servers": {
				"type": "array",
				"items": {
					"type": "object",
					"minItems": 1,
					"properties": {
						"domain": {
							"type": "string",
							"pattern": "[^\\s\\.`~!@#\\$%\\^&*\\(\\)=+\\{\\[\\]\\}}\\\\\\|]+(\\.[^\\s\\.`~!@#\\$%\\^&*\\(\\)=+\\{\\[\\]\\}}\\\\\\|]+)*"
						},
						"ignore": {
							"type": "boolean"
						}
					},
					"required": [
						"url"
					]
				}
			},
			"module": {
				"type": "string",
				"pattern": "^[\\d-_a-z]+$"
			}
		},
		"required": [
			"name",
			"homepage",
			"servers",
			"module"
		]
	}
}