{
	"$id": "https://github.com/ChatZilla-Replacement-Project/JSON-Schemas/raw/main/bouncer-site-def.schema.json",
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"properties": {
		"productVersion": {
			"type": "string",
			"pattern": "^\\d+(\\.\\d+)*( +[bB]uild\\d)$",
		}
		"entries": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": {
						"type": "string"
					},
					"homepage": {
						"type": "string",
						"format": "iri"
					},
					"allowedNetworks": {
						"type": "array",
						"items": {
							"type": "string"
						}
					},
					"module": {
						"type": "string",
						"pattern": "^[\\d\\-_a-z]+$"
					}
				}
			}
		}
	}
}
